<%-include("../../views/partials/user/header.ejs")%>

<!-- Start Hero Section -->
<div class="hero">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="intro-excerpt">
                    <h1>Timeless Elegance</h1>
                    <p class="mb-4">Discover the quintessential charm of old money fashion. Curated vintage-inspired outfits that exude sophistication, refinement, and understated luxury.</p>
                    <p>
                        <a href="/shop" class="btn btn-dark me-2">Explore Collection</a>
                        <a href="#products" class="btn btn-outline-dark">View Pieces</a>
                    </p>
                </div>
            </div>
           
        </div>
    </div>
</div>
<!-- End Hero Section -->

<!-- Start Product Section -->
<div class="product-section" id="products">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2>Curated Vintage Ensembles</h2>
                <p>Timeless pieces that tell a story of classic sophistication</p>
            </div>
            
            <% if (products && products.length > 0) { %> 
                <% products.forEach(product => { %> 
                    <div class="col-12 col-md-4 mb-4"> 
                        <a class="product-item" href="/productDetails?id=<%=product._id%>"> 
                            <% if (product.productImage && product.productImage.length > 0) { %> 
                                <img src="/uploads/product-images/<%=product.productImage[0]%>"  
                                     alt="<%=product.productName%>" 
                                     class="img-fluid product-thumbnail rounded"> 
                            <% } else { %> 
                                <img src="/images/placeholder-vintage.jpg"  
                                     alt="No image available" 
                                     class="img-fluid product-thumbnail rounded"> 
                            <% } %> 
                            <h3 class="product-title text-dark"><%=product.productName%></h3> 
                            <div class="product-price-wrap"> 
                                <strong class="product-price text-success">₹<%=product.salePrice%></strong> 
                                <span class="original-price text-muted" style="text-decoration: line-through;"> 
                                    ₹<%=product.regularPrice%>
                                </span>
                                <p class="product-description text-secondary mt-2"><%=product.description%></p> 
                            </div> 
                            <span class="icon-cross"> 
                                <img src="images/cross.svg" class="img-fluid"> 
                            </span> 
                        </a> 
                    </div> 
                <% }); %> 
            <% } else { %> 
                <div class="col-12 text-center"> 
                    <p>Our vintage collection is being refreshed. Check back soon!</p> 
                </div> 
            <% } %> 
        </div>
        
        <div class="row mt-5">
            <div class="col-12 text-center">
                <a href="/shop" class="btn btn-dark btn-lg">Full Vintage Collection</a>
            </div>
        </div>
    </div>
</div>
<!-- End Product Section -->

<%-include("../../views/partials/user/footer.ejs")%>