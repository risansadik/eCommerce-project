	<!-- Start Product Section -->
	<div class="product-section">
		<div class="container">
			<div class="row">
				<% if (products && products.length > 0) { %>
					<% products.forEach(product => { %>
						<div class="col-12 col-md-4 mb-4">
							<a class="product-item" href="/productDetails?id=<%=product._id%>">
								<% if (product.productImage && product.productImage.length > 0) { %>
									<img src="/uploads/product-images/<%=product.productImage[0]%>" 
										 alt="<%=product.productName%>"
										 class="img-fluid product-thumbnail">
								<% } else { %>
									<img src="/images/placeholder.jpg" 
										 alt="No image available"
										 class="img-fluid product-thumbnail">
								<% } %>
								<h3 class="product-title"><%=product.productName%></h3>
								<div class="product-price-wrap">
									<strong class="product-price">₹<%=product.salePrice%></strong>
									<span class="original-price" style="text-decoration: line-through; color: #999;">
										₹<%=product.regularPrice%><br>
									</span><%=product.description%>
								</div>
								<span class="icon-cross">
									<img src="images/cross.svg" class="img-fluid">
								</span>
							</a>
						</div>
					<% }); %>
				<% } else { %>
					<div class="col-12 text-center">
						<p>No products available at this time.</p>
					</div>
				<% } %>
			</div>
		</div>
	</div>





